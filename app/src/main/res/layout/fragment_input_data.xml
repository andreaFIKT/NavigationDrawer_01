<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fcf8f8">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:clickable="true"
        android:background="#00008B"
        android:height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#faf4f4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="60dp"
        android:textAlignment="center"
        android:editable="false"
        android:background="@android:color/transparent"
        android:textColor="#00008B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entLiters"
        android:hint="Enter liters"
        android:height="60dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:drawable="@android:drawable/editbox_background_normal"
        android:backgroundTint="#00008B"
        android:textCursorDrawable="@android:color/black"
        android:textColorHint="#00008B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entPrice"
        android:textAlignment="center"
        android:hint="Enter price"
        android:textSize="35sp"
        android:layout_below="@+id/entLiters"
        android:layout_alignParentStart="true"
        android:drawable="@android:drawable/editbox_background_normal"
        android:backgroundTint="#00008B"
        android:textCursorDrawable="@android:color/black"
        android:textColorHint="#00008B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entCost"
        android:height="60dp"
        android:hint="Enter cost"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_below="@+id/entPrice"
        android:layout_alignParentStart="true"
        android:drawable="@android:drawable/editbox_background_normal"
        android:backgroundTint="#00008B"
        android:textCursorDrawable="@android:color/black"
        android:textColorHint="#00008B" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latitude"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:text="Latitude :"
        android:height="40dp"
        android:textAlignment="textStart"
        android:textColor="#00008B" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_below="@+id/latitude"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:text="Longitude:"
        android:height="40dp"
        android:textColor="#00008B" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Lat&amp;Lng"
        android:id="@+id/btnGPS"
        android:layout_below="@+id/longitude"
        android:layout_centerHorizontal="true"
        android:background="#00008B"
        android:textColor="#FFFFFF"
        android:clickable="true" />

</RelativeLayout>
