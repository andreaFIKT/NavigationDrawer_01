<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fbfafa">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:clickable="true"
        android:background="#26ca47"
        android:height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#faf4f4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="60dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entLiters"
        android:hint="Enter liters"
        android:height="60dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entPrice"
        android:textAlignment="center"
        android:hint="Enter price"
        android:textSize="35sp"
        android:layout_below="@+id/entLiters"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entCost"
        android:height="60dp"
        android:hint="Enter cost"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_below="@+id/entPrice"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latitude"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#9dc7ed" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_below="@+id/latitude"
        android:layout_alignParentEnd="true"
        android:background="#c0d3fb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Lat&amp;Lng"
        android:id="@+id/btnGPS"
        android:layout_below="@+id/longitude"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

</RelativeLayout>
