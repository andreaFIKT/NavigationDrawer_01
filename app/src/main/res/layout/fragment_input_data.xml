<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#b1afaf">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:clickable="true"
        android:background="#591f1f"
        android:height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#faf4f4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entLiters"
        android:hint="Enter liters"
        android:height="60dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entPrice"
        android:layout_marginTop="66dp"
        android:textAlignment="center"
        android:hint="Enter price"
        android:textSize="35sp"
        android:layout_below="@+id/entLiters"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entCost"
        android:height="60dp"
        android:layout_below="@+id/entPrice"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:hint="Enter cost"
        android:textSize="35sp"
        android:textAlignment="center" />

</RelativeLayout>
